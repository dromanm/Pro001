<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hw6.notes.view.controller.MainController">
   <center>
      <TableView fx:id="notesTable" prefHeight="480.0" prefWidth="640.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="id" maxWidth="70.0" minWidth="40.0" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="serial" maxWidth="150.0" minWidth="70.0" prefWidth="100.0" text="Serial" />
            <TableColumn fx:id="vendor" maxWidth="150.0" minWidth="80.0" prefWidth="90.0" text="Vendor" />
            <TableColumn fx:id="model" maxWidth="250.0" minWidth="120.0" prefWidth="150.0" text="Model" />
            <TableColumn fx:id="manufDate" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" text="Manuf. date" />
            <TableColumn fx:id="price" minWidth="130.0" prefWidth="130.0" text="Price" />
        </columns>
      </TableView>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit information">
            <items>
              <MenuItem mnemonicParsing="false" text="Add..." onAction="#add" />
                  <Menu mnemonicParsing="false" text="Delete..." >
                    <items>
                        <MenuItem mnemonicParsing="false" text="by model" onAction="#deleteByModel"/>
                        <MenuItem mnemonicParsing="false" text="by ID" onAction="#deleteById"/>
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Change...">
                    <items>
                      <MenuItem mnemonicParsing="false" text="price by ID" onAction="#changePriceById"/>
                        <MenuItem mnemonicParsing="false" text="serial &amp; vendor by ID" onAction="#changeSerialVendorById"/>
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Find...">
                    <items>
                      <MenuItem mnemonicParsing="false" text="by vendor" onAction="#findByVendor"/>
                        <MenuItem mnemonicParsing="false" text="by price &amp; manuf. date" onAction="#findByPriceDate"/>
                        <MenuItem mnemonicParsing="false" text="by vendor, price range &amp; &lt; input date" onAction="#findByVendorPriceDate"/>
                    </items>
                  </Menu>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
