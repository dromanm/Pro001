<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="homeWork01.controllers.MainController">
    <children>
        <TableView fx:id="tableAddressBook" prefHeight="400.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="clmnName" prefWidth="100.0" text="Имя"/>
                <TableColumn fx:id="clmnSurname" prefWidth="100.0" text="Фамилия"/>
                <TableColumn fx:id="clmnAge" prefWidth="100.0" text="Возраст"/>
                <TableColumn fx:id="clmnBirthDate" prefWidth="100.0" text="Дата рожд-я"/>
            </columns>
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="5.0" top="10.0"/>
            </HBox.margin>
        </TableView>
        <VBox prefHeight="400.0" prefWidth="200.0">
            <children>
                <TextField fx:id="fldTextField" prefHeight="45.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </TextField>
                <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#actionSearch" prefHeight="60.0"
                        prefWidth="200.0" text="Поиск">
                    <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#actionButtonPressed" prefHeight="60.0"
                        prefWidth="200.0" text="Добавить">
                    <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnPrint" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Показать">
                    <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnSave" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Сохранить">
                    <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="btnOpen" mnemonicParsing="false" prefHeight="60.0" prefWidth="200.0" text="Открыть">
                    <VBox.margin>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</HBox>
